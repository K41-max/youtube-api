{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["ESNext", "ES2020", "ESNext.AsyncIterable", "DOM"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["client/*"],
      "@/*": ["client/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["@types/node", "@nuxt/types", "@types/jest"],
    "importHelpers": true
  },
  "include": ["server/**/*", "client/**/*", "types/**/*"],
  "exclude": ["server/**/*.spec.ts"]
}
