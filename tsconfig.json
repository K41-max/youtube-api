{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["ESNext", "ES2020", "ESNext.AsyncIterable", "DOM"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "strict": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["client/*"],
      "@/*": ["client/*"],
      "@shared/*": ["shared/*"]
    },
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/axios", "@types/jest"]
  },
  "include": ["server/**/*", "client/**/*", "types/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
