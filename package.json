{
  "name": "viewtube",
  "description": "ViewTube, an alternative Youtube frontend.",
  "author": "Maurice Oegerli",
  "country": "Switzerland",
  "email": "viewtube@m-o.dev",
  "version": "0.8.0",
  "license": "AGPLv3",
  "scripts": {
    "build": "cross-env NODE_ENV=production yarn workspaces foreach run build",
    "build:server": "scripts/build.server.sh",
    "build:client": "cross-env NODE_ENV=production yarn workspace client run build",
    "serve:api": "yarn workspace server run serve",
    "serve:client": "yarn workspace client run serve",
    "start": "yarn workspace server run start",
    "lint-staged": "prettier --write --ignore-unknown"
  },
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "_moduleAliases": {
    "server": "server/dist/server"
  },
  "browserslist": [
    "last 1 version",
    "not IE 11",
    "not IE_Mob 11",
    "not Edge 18"
  ],
  "dependencies": {
    "eslint-import-resolver-node": "^0.3.6",
    "typescript": "^4.4.3",
    "vue": "2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "prettier": "^2.4.1",
    "vls": "^0.7.4"
  }
}
