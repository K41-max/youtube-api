{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "removeComments": true,
    "lib": ["ESNext", "ES2020", "DOM", "ESNext.AsyncIterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "viewtube/*": ["../../*"],
      "server/*": ["./*"]
    },
    "types": ["node", "@types/jest", "@sentry/types"]
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/.yarn",
    "../client/node_modules",
    "client/node_modules"
  ]
}
